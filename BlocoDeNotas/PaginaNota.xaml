<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlocoDeNotas.PaginaNota"
             Title="PaginaNota">
    <VerticalStackLayout
        Spacing="10"
        Margin="10">

        <Editor
            x:Name="TxtEditor"
            Placeholder="Escreva sua anotação"
            HeightRequest="100" 
        />

        <Grid 
            ColumnDefinitions="*,*"
            ColumnSpacing="4"
        >
            <Button
                x:Name="BtnSalvar"
                Text="Salvar"
                Clicked="BtnSalvar_Clicked"
            />
            <Button
                Grid.Column="1"
                x:Name="BtnExcluir"
                Text="Excluir"
                Clicked="BtnExcluir_Clicked"
            />
        </Grid>


    </VerticalStackLayout>
</ContentPage>